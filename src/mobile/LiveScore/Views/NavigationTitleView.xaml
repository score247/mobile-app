<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveScore.Views.NavigationTitleView"
             BackgroundColor="#0F111C">
    <ContentView.Content>
        <FlexLayout Style="{StaticResource FlexLayoutVerticalCenter}">
            <Label x:Name="titleLabel" Style="{StaticResource PageTitle}" Text="{Binding Title}" AutomationId="NavigationTitle"  />
            <StackLayout x:Name="SportName">
                <Label Style="{StaticResource SportName}" Text="{Binding CurrentSportName}" />
                <!--<StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectSportCommand}" />
                </StackLayout.GestureRecognizers>-->
            </StackLayout>            
        </FlexLayout>
    </ContentView.Content>
</ContentView>