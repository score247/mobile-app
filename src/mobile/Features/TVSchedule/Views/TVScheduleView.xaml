        <FlexLayout Style="{StaticResource TVScheduleTitleBox}" >
            <Label Text="{langs:Translate Time}"
                   Style="{StaticResource TVScheduleTimeTitle}"
                   />
            <ContentView>
                <BoxView Style="{StaticResource VerticalLine}" />
            </ContentView>

            <Label Text="{langs:Translate Match}"
                   Style="{StaticResource TVScheduleMatchTitle}" />
            <ContentView>
                <BoxView Style="{StaticResource VerticalLine}" />
            </ContentView>

            <Label Text="{langs:Translate Channel}"
                   Style="{StaticResource TVScheduleChannelTitle}" />
        </FlexLayout>
        <ContentView>
            <BoxView Style="{StaticResource HorizontalLine}" />
        </ContentView>
        
        <!-- League Name-->
        <FlexLayout Style="{StaticResource TVScheduleLeagueName}" >
            <Image Source="images/flag_league/flag_england.png" Style="{StaticResource LeagueFlag}" />
            <Label Text="CHAMPION LEAGUE" Style="{StaticResource LeagueName}" />
            <Label Style="{StaticResource DetailIcon}" HorizontalOptions="EndAndExpand" />
        </FlexLayout>
        <ContentView>
            <BoxView Style="{StaticResource HorizontalLine}" />
        </ContentView>
        
        <!-- Matches -->
        <FlexLayout Style="{StaticResource TVScheduleBox}">
            <Label Text="03:30" 
