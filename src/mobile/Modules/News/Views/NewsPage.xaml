                     VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand"
                     Padding="4"
                     Margin="0,0,0,4"
                     BackgroundColor="{StaticResource SecondColor}">
                    <AbsoluteLayout WidthRequest="96">
                        <Image Source="images/news/news_1.png" Aspect="AspectFill" />
                    </AbsoluteLayout>
                    <AbsoluteLayout Padding="12,0">
                        <Label Text="Luis Enrique casts doubt over Isco's Spain place"
                               FontSize="12"
                               TextColor="#fff"
                               AbsoluteLayout.LayoutBounds="0,0,1,1"
                               AbsoluteLayout.LayoutFlags="All" />
                        <Label Text="28 Jan 2019, 15:04" FontSize="11" TextColor="{StaticResource SecondTextColor}"
                               AbsoluteLayout.LayoutBounds="0,1,1,.3"
                               AbsoluteLayout.LayoutFlags="All"
                               VerticalOptions="End" />
                    </AbsoluteLayout>
                </StackLayout>

