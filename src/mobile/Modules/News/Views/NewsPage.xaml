            <Label Text="WORLD NEWS" Style="{StaticResource ActiveTextTab}" />
            <Label Text="TRANSFERS" Style="{StaticResource TextTab}" />
            <Label Text="VIDEOS" Style="{StaticResource TextTab}" />
        </FlexLayout>
