<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Score.Views.TVSchedulePage"
             BackgroundColor="{StaticResource PrimaryColor}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="images/search.png" Priority="1" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <Style x:Key="QuickAccessContainer" TargetType="FlexLayout">
            <Setter Property="Direction" Value="Row" />
            <Setter Property="AlignItems" Value="Stretch" />
            <Setter Property="JustifyContent" Value="SpaceBetween" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="Margin" Value="10,8,10,10" />
        </Style>

        <!--<Style x:Key="QuickAccessCalendarListView" TargetType="ListView">
            <Setter Property="FlexLayout.AlignSelf" Value="Center" />
            -->
        <!--<Setter Property="Rotation" Value="270" />-->
        <!--
            <Setter Property="RowHeight" Value="40" />
            <Setter Property="HeightRequest" Value="280" />
            <Setter Property="WidthRequest" Value="32" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="SeparatorVisibility" Value="None" />
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        </Style>-->

        <Style x:Key="QuickAccessCalendarDate" TargetType="Label">
            <Setter Property="TextColor" Value="#939393" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
        </Style>

        <Style x:Key="QuickAccessCalendarBox" TargetType="Frame">
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="BackgroundColor" Value="#1D2133" />
            <Setter Property="WidthRequest" Value="32" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <Style x:Key="TVScheduleTitle" TargetType="Label">
            
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="11" />
        </Style>

        <Style x:Key="TVScheduleTime" BasedOn="{StaticResource TVScheduleTitle}" TargetType="Label">
            <Setter Property="WidthRequest" Value="54" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
        </Style>

        <Style x:Key="TVScheduleTimeTitle" BasedOn="{StaticResource TVScheduleTime}" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource SecondTextColor}" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="TVScheduleMatch" BasedOn="{StaticResource TVScheduleTitle}" TargetType="Label">
            <Setter Property="HorizontalTextAlignment" Value="Start" />
            <Setter Property="FlexLayout.Grow" Value="1" />
        </Style>

        <Style x:Key="TVScheduleMatchTitle" BasedOn="{StaticResource TVScheduleMatch}" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource SecondTextColor}" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="TVScheduleChannel" BasedOn="{StaticResource TVScheduleTitle}" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource SecondTextColor}" />
            <Setter Property="WidthRequest" Value="132" />
            <Setter Property="HorizontalTextAlignment" Value="Start" />
        </Style>

        <Style x:Key="TVScheduleChannelTitle" BasedOn="{StaticResource TVScheduleChannel}" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>
    <StackLayout>
        <FlexLayout Style="{StaticResource QuickAccessContainer}">
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="24"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="THU"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="24"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="THU"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="25"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="FRI"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="26"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="SAT"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="27"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="SUN"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="28"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="MON"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="29"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="TUE"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="30"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="WEB"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource QuickAccessCalendarBox}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="31"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontSize="20" />
                    <Label Text="THU"
                        Style="{StaticResource QuickAccessCalendarDate}"
                        FontAttributes="Bold"
                        FontSize="6" />
                </StackLayout>
            </Frame>
        </FlexLayout>
        <FlexLayout Style="{StaticResource FlexLayoutHorizontalCenter}" HeightRequest="30">
            <Label Text="TIME" 
                   FontAttributes="Bold"
                   Style="{StaticResource TVScheduleTimeTitle}" />
            <Label Text="MATCH" 
                   FontAttributes="Bold"
                   Style="{StaticResource TVScheduleMatchTitle}" />
            <Label Text="CHANNEL"
                   FontAttributes="Bold"
                   Style="{StaticResource TVScheduleChannelTitle}" />
        </FlexLayout>
        <FlexLayout Style="{StaticResource FlexLayoutHorizontalCenter}" BackgroundColor="{StaticResource SecondColor}">
            <Label Text="03:30" 
                   Style="{StaticResource TVScheduleTime}"/>
            <StackLayout FlexLayout.Grow="1" Padding="0,8">
                <Label Text="Chelsea" TextColor="#fff" Margin="0,0,0,4" />
                <Label Text="Tottenham Hotspur" TextColor="#fff" />
            </StackLayout>
            <Label Text="CHANNEL"
                   Style="{StaticResource TVScheduleChannel}" />
        </FlexLayout>
        <BoxView Style="{StaticResource MenuLine}" />
        <FlexLayout Style="{StaticResource FlexLayoutHorizontalCenter}" BackgroundColor="{StaticResource SecondColor}">
            <Label Text="03:30" 
                   Style="{StaticResource TVScheduleTime}"/>
            <StackLayout FlexLayout.Grow="1" Padding="0,8">
                <Label Text="Chelsea" TextColor="#fff" Margin="0,0,0,4" />
                <Label Text="Tottenham Hotspur" TextColor="#fff" />
            </StackLayout>
            <Label Text="CHANNEL"
                   Style="{StaticResource TVScheduleChannel}" />
        </FlexLayout>
    </StackLayout>
</ContentPage>