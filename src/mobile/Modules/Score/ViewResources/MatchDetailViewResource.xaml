<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Score.ViewResources.MatchDetailViewResource">
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Match Score -->
    <Style x:Key="MatchScoreContainer" TargetType="FlexLayout">
        <Setter Property="Direction" Value="Row" />
        <Setter Property="AlignItems" Value="Stretch" />
        <Setter Property="JustifyContent" Value="Center" />
        <Setter Property="Margin" Value="0,20" />
    </Style>

    <Style x:Key="MatchScoreBox" TargetType="Frame">        
        <Setter Property="HeightRequest" Value="20" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BackgroundColor" Value="{StaticResource SecondAccentColor}" />
    </Style>

    <Style x:Key="ScoreText" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource MediumTextFontSize}" />
    </Style>

    <Style x:Key="GeneralMatchStatus" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,8,0,0" />
        <Setter Property="TextColor" Value="{StaticResource SecondTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallTextFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Tab -->
    <Style x:Key="ScrollTab" TargetType="ScrollView">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HeightRequest" Value="24" />
        <Setter Property="Padding" Value="8,0" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <!-- SubTab -->
    <Style x:Key="SubTabContainer" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondColor}" />
        <Setter Property="Padding" Value="1" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="Margin" Value="8,0" />
    </Style>
    <Style x:Key="SubTabBox" TargetType="FlexLayout">
        <Setter Property="JustifyContent" Value="SpaceBetween" />
        <Setter Property="AlignItems" Value="Stretch" />
        <Setter Property="HeightRequest" Value="28" />
    </Style>
    <Style x:Key="CommonSubTab" TargetType="Label">
        <Setter Property="FlexLayout.Grow" Value="1" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{StaticResource MediumTextFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>
    <Style x:Key="SubTab" BasedOn="{StaticResource CommonSubTab}" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LineColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
    </Style>
    <Style x:Key="SubTabActive" BasedOn="{StaticResource CommonSubTab}" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource SecondAccentColor}" />
    </Style>
    <!-- Group -->
    <Style x:Key="Group" TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="Padding" Value="16,0" />
        <Setter Property="HeightRequest" Value="28" />
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="GroupName" TargetType="Label">
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource SecondTextColor}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="{StaticResource UppercaseTextFontSize}" />        
    </Style>
</ResourceDictionary>