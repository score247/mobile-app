<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <CodeAnalysisRuleSet>Score.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <CodeAnalysisRuleSet>Score.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="3.6.0.264807" />
    <PackageReference Include="Prism.Forms" Version="7.1.0.431" />
    <PackageReference Include="Refit" Version="4.6.99" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Common\Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ViewModels\CalendarPageViewModel.cs" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="ViewResources\MatchInfoViewResource - Copy.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <Compile Update="ViewResources\MatchStatsViewResource.xaml.cs">
      <DependentUpon>MatchStatsViewResource.xaml</DependentUpon>
    </Compile>
    <Compile Update="ViewResources\MatchTrackerPageResource.xaml.cs">
      <DependentUpon>MatchTrackerViewResource.xaml</DependentUpon>
    </Compile>
    <Compile Update="ViewResources\MatchInfoPageResource.xaml.cs">
      <DependentUpon>MatchInfoViewResource.xaml</DependentUpon>
    </Compile>
    <Compile Update="ViewResources\CalendarPageResource.xaml.cs">
      <DependentUpon>CalendarViewResource.xaml</DependentUpon>
    </Compile>
    <Compile Update="ViewResources\TVSchedulePageResource.xaml.cs">
      <DependentUpon>TVScheduleViewResource.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ScorePage.xaml.cs">
      <DependentUpon>ScoresView.xaml</DependentUpon>
    </Compile>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Controls\Calendar.xaml.cs">
      <DependentUpon>Calendar.xaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Views\Templates\MatchStatsTemplate.xaml.cs">
      <DependentUpon>MatchStatsTemplate.xaml</DependentUpon>
    </Compile>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Views\Templates\MatchTrackerView.xaml.cs">
      <DependentUpon>MatchTrackerTemplate.xaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Views\Templates\MatchTrackerTemplate.xaml.cs">
      <DependentUpon>MatchTrackerTemplate.xaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="ViewResources\ScorePageResource.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\LivePage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\MatchInfoPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\MatchTrackerPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\TVSchedulePage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Models\" />
    <Folder Include="Controls\">
    </Folder>
  </ItemGroup>
</Project>
