<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="LiveScoreApp.ViewResources.MainViewResource">
    <Style x:Key="SideBar" TargetType="StackLayout">
        <Setter Property="Margin" Value="0,50,0,0" />
    </Style>
    <Style x:Key="NavGroup" TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="Padding" Value="12,0" />
    </Style>
    <Style x:Key="NavGroupName" TargetType="Label">
        <Setter Property="HeightRequest" Value="28" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource SecondTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource UppercaseTextFontSize}" />
    </Style>
    <Style x:Key="NavIcon" BasedOn="{StaticResource Icons}" TargetType="Label">
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
    </Style>
   
    <Style x:Key="LanguageName" BasedOn="{StaticResource NavValue}" TargetType="Label">
        <Setter Property="Margin" Value="8,14,0,14" />
    </Style>
</ResourceDictionary>