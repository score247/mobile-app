<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="LiveScore.Views.NavigationTitleView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource PrimaryColor}">
    <ContentView.Content>
        <FlexLayout AutomationProperties.IsInAccessibleTree="true" Style="{StaticResource FlexLayoutVerticalCenter}">
            <StackLayout x:Name="SportName">
                <Label
                    x:Name="sportLabel"
                    AutomationId="NavigationSportNameLbl"
                    Style="{StaticResource SportName}"
                    Text="{Binding CurrentSportName}" />
            </StackLayout>
            <Label
                x:Name="titleLabel"
                AutomationId="NavigationTitleLbl"
                Style="{StaticResource PageTitle}"
                Text="{Binding Title}" />
            <FlexLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SelectSportCommand}" />
            </FlexLayout.GestureRecognizers>
        </FlexLayout>
    </ContentView.Content>
</ContentView>