<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="LiveScore.Views.NavigationTitleView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource PrimaryColor}">
    <ContentView.Content>
        <FlexLayout Style="{StaticResource FlexLayoutVerticalCenter}">
            <Label
                x:Name="titleLabel"
                AutomationId="Navigation_Title"
                Style="{StaticResource PageTitle}"
                Text="{Binding Title}" />
            <StackLayout x:Name="SportName">
                <Label Style="{StaticResource SportName}" Text="{Binding CurrentSportName}" AutomationId="Sport_Name" />
            </StackLayout>
        </FlexLayout>
    </ContentView.Content>
</ContentView>