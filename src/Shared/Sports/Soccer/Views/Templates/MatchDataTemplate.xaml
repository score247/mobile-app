<?xml version="1.0" encoding="UTF-8" ?>
<DataTemplate
    x:Class="LiveScore.Soccer.Views.Templates.MatchDataTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:coreResources="clr-namespace:LiveScore.Core.ViewResources;assembly=LiveScore.Core;">
    <ViewCell>
        <StackLayout>
            <StackLayout.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <coreResources:MatchViewResource />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </StackLayout.Resources>
            <FlexLayout Style="{StaticResource FlexLayoutHorizontalCenter}">
                <StackLayout Spacing="5">
                    <Label IsVisible="{Binding Match.MatchResult.EventStatus.IsLive}" Style="{StaticResource LiveIcon}"/>
                    <Label Style="{StaticResource MatchStatus}" Text="{Binding DisplayMatchStatus}" />
                </StackLayout>
                <StackLayout Style="{StaticResource TeamContainer}">
                    <Label Style="{StaticResource HomeTeam}" Text="{Binding Match.Teams[0].Name}" />
                    <Label Style="{StaticResource AwayTeam}" Text="{Binding Match.Teams[1].Name}" />
                </StackLayout>
                <StackLayout Style="{StaticResource ScoreContainer}" IsVisible="{Binding Match.MatchResult.EventStatus.ShowScore}">
                    <Label Style="{StaticResource HomeScore}" Text="{Binding Match.MatchResult.HomeScore}" />
                    <Label Style="{StaticResource AwayScore}" Text="{Binding Match.MatchResult.AwayScore}" />
                </StackLayout>
                <Label AutomationId="MatchFavoriteBtn" Style="{StaticResource MatchFavoriteIcon}" />
            </FlexLayout>
        </StackLayout>
    </ViewCell>
</DataTemplate>