<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:languageResources="clr-namespace:LiveScore.Common.LangResources;assembly=LiveScore.Common"
             xmlns:resources="clr-namespace:LiveScore.Soccer.ViewResources"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LiveScore.Soccer.Views.Templates.DetailStatistics.StatisticsTemplate">
    <StackLayout>
        <StackLayout.Resources>
            <resources:MatchDetailViewResource />
        </StackLayout.Resources>
        <Label Style="{StaticResource NoInfo}"
               Text="{languageResources:Translate NoData}"
               IsVisible="{Binding IsNoData}"
               AutomationId="NoDataLabel" />

        <ListView 
            ItemsSource="{Binding SubStatisticItems}" 
            IsVisible="{Binding IsVisible}"
            Header="{Binding MainStatistic}">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid IsVisible="{Binding IsVisibled}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding StatisticName}" Grid.Column="1" Grid.Row="0"></Label>
                        <Label Text="{Binding HomeValue}" Grid.Column="0" Grid.Row="0"></Label>
                        <Label Text="{Binding AwayValue}" Grid.Column="2" Grid.Row="0"></Label>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid IsVisible="{Binding IsVisibled}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding StatisticName}" Grid.Column="1" Grid.Row="0"></Label>
                            <Label Text="{Binding HomeValue}" Grid.Column="0" Grid.Row="0"></Label>
                            <Label Text="{Binding AwayValue}" Grid.Column="2" Grid.Row="0"></Label>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</DataTemplate>