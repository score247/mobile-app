                    <resources:MatchDetailLinesUpViewResource />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </StackLayout.Resources>
        <WebView HeightRequest="300" Source="{Binding LineupsPitchView}" />
        <ListView BackgroundColor="#272830"
                                  IsGroupingEnabled="True"
                                  ItemsSource="{Binding SubstitutionAndCoachGroups}"
                                  IsPullToRefreshEnabled="true"
                                  GroupDisplayBinding="{Binding Name}"
                                  HeightRequest="{Binding FooterHeight}"
                                  RefreshCommand="{Binding RefreshCommand}"
                                  IsRefreshing="{Binding IsRefreshing}"
                                  VerticalOptions="FillAndExpand">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Name}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding HomeValue}" />
                            <Label Text="{Binding AwayValue}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Footer>
                <StackLayout BackgroundColor="Transparent"
                             HeightRequest="500" />
            </ListView.Footer>
        </ListView>

