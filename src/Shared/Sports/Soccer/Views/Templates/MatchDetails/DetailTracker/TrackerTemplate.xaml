<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:resources="clr-namespace:LiveScore.Soccer.ViewResources"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LiveScore.Soccer.Views.Templates.DetailTracker.TrackerTemplate">

    <ViewCell Height="900">
        <ScrollView  HeightRequest="900">
            <StackLayout>
                <StackLayout.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <resources:MatchDetailViewResource />
                            <resources:MatchDetailTrackerViewResource />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </StackLayout.Resources>

                <Label
                    Style="{StaticResource NoInfo}"
                    IsVisible="{Binding NoData}"
                    Text="There is no data" />

                <RelativeLayout
                    IsVisible="{Binding HasTrackerData}"
                    Style="{StaticResource MatchBallTrackerContentLayout}">
                    <FlexLayout
                        Style="{StaticResource MatchBallTrackerWebViewContainer}"
                        IsVisible="{Binding TrackerVisible}">
                        <WebView
                            Source="{Binding WidgetContent}"
                            Style="{StaticResource MatchBallTrackerWebView}" />
                    </FlexLayout>

                    <FlexLayout
                        Style="{StaticResource MatchBallTrackerGroup}"
                        IsVisible="{Binding TrackerHidden}">
                        <Label Text="VIEW BALL TRACKER" Style="{StaticResource GroupName}" />
                        <Button
                            Style="{StaticResource MatchBallTrackerExpandIcon}"
                            Command="{Binding OnExpandTracker}" />
                    </FlexLayout>

                    <Button IsVisible="{Binding TrackerVisible}"
                            Style="{StaticResource MatchBallTrackerCollapseIcon}"
                            Command="{Binding OnCollapseTracker}" />
                </RelativeLayout>
                <!--  COMMENTARIES  -->
                <FlexLayout Style="{StaticResource Group}">
                    <Label Style="{StaticResource GroupName}" Text="COMMENTARIES" />
                </FlexLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <!--  Match ends  -->
                    <Label Grid.Row="0"
                    Grid.Column="0" Style="{StaticResource MatchTrackerEndIcon}" />
                    <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource MatchTrackerCommentariesText}"
                    Text="Match ends, Verona 2, Cosenza 1." />
                </Grid>
                <BoxView Style="{StaticResource HorizontalLine}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <!--  Time  -->
                    <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource MatchTrackerCommentariesTime}">
                        <Label Style="{StaticResource MatchTrackerMinutes}" Text="90'" />
                    </Frame>
                    <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource MatchTrackerCommentariesText}"
                    Text="Second Half ends, Verona 2, Cosenza 1." />
                </Grid>
                <BoxView Style="{StaticResource HorizontalLine}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <!--  Goal!  -->
                    <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource MatchTrackerCommentariesGoal}">
                        <Label Style="{StaticResource MatchTrackerMinutes}" Text="88'" />
                    </Frame>
                    <StackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,7">
                        <Label Style="{StaticResource MatchTrackerCommentariesContentGoal}" Text="GOAL!" />
                        <Label Style="{StaticResource MatchTrackerCommentariesDetailGoal}" Text="Verona 2, Cosenza 1. Darko Lazovic (Cosenza) right footed shot from very close range to bottom left corner. Assissted by Daniel Bessa with a cross" />
                    </StackLayout>
                </Grid>
                <BoxView Style="{StaticResource HorizontalLine}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <!--  Time  -->
                    <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource MatchTrackerCommentariesTime}">
                        <Label Style="{StaticResource MatchTrackerMinutes}" Text="82'" />
                    </Frame>
                    <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource MatchTrackerCommentariesText}"
                    Text="Goal kick for Verona at Carlo Castellani" />
                </Grid>
                <BoxView Style="{StaticResource HorizontalLine}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <!--  Yellow card  -->
                    <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource MatchTrackerCommentariesYellowCard}">
                        <Label Style="{StaticResource MatchTrackerMinutes}" Text="63'" />
                    </Frame>
                    <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource MatchTrackerCommentariesContentYellowCard}"
                    Text="YELLOW CARD!" />
                </Grid>
                <BoxView Style="{StaticResource HorizontalLine}" />
            </StackLayout>
        </ScrollView>
    </ViewCell>
</DataTemplate>