<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:resources="clr-namespace:LiveScore.Soccer.ViewResources"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LiveScore.Soccer.Views.Templates.DetailTracker.TrackerTemplate">

    <ViewCell Height="600">
        <ScrollView  HeightRequest="600">
            <StackLayout>
                <StackLayout.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <resources:MatchDetailViewResource />
                            <resources:MatchDetailTrackerViewResource />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </StackLayout.Resources>

                <StackLayout BackgroundColor="{StaticResource PrimaryColor}">
                    <WebView                        
                        BackgroundColor="{StaticResource PrimaryColor}"
                        Source="{Binding WidgetContent}"
                        HeightRequest="1000"
                        WidthRequest="400"
                        VerticalOptions="FillAndExpand"
                        />
                </StackLayout>
             
            </StackLayout>
        </ScrollView>
        
    </ViewCell>
</DataTemplate>