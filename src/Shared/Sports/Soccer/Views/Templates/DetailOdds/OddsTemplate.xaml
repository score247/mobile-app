    <StackLayout>
        <ActivityIndicator
            Margin="20"
            IsEnabled="{Binding IsLoading}"
            IsRunning="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}"
            Style="{StaticResource CenterActivityIndicator}" />
        
        <FlexLayout Style="{StaticResource TopInfo}">
            <StackLayout FlexLayout.Grow="1">
                <Frame Style="{StaticResource SubTabContainer}">
                    <FlexLayout Style="{StaticResource SubTabBox}">
                        <Label Style="{StaticResource SubTabActive}" Text="1x2" />
                        <Label Style="{StaticResource SubTab}" Text="Handicap" />
                        <Label Style="{StaticResource SubTab}" Text="Over/Under" />
                    </FlexLayout>
                </Frame>
            </StackLayout>
            <AbsoluteLayout Style="{StaticResource MatchOddsDropdownListBox}">
                <Picker Title="Decimal" Style="{StaticResource DropdownList}">
                    <Picker.Items>
                        <x:String>Decimal</x:String>
                        <x:String>Malay</x:String>
                        <x:String>HongKong</x:String>
                    </Picker.Items>
                </Picker>
                <Image Style="{StaticResource DropdownIcon}" />
            </AbsoluteLayout>
        </FlexLayout>

        <StackLayout IsVisible="{Binding HasData}" Padding="1" BackgroundColor="{StaticResource LineColor}" Style="{StaticResource TableContainer}">
