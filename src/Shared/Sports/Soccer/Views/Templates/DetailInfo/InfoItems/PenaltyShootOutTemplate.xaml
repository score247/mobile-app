<?xml version="1.0" encoding="UTF-8" ?>
<DataTemplate
    x:Class="LiveScore.Soccer.Views.Templates.MatchDetailInfo.PenaltyShootOutTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:LiveScore.Soccer.ViewResources">
    <ViewCell>
        <StackLayout>
            <StackLayout.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <resources:MatchDetailViewResource />
                        <resources:MatchDetailInfoViewResource />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </StackLayout.Resources>

            <Grid Padding="16,0" BackgroundColor="{Binding RowColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="68" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42" />
                </Grid.RowDefinitions>

                <StackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource MatchInfoTeam}">
                    <StackLayout Style="{StaticResource MatchInfoPlayerGroup}">
                        <Label
                            HorizontalTextAlignment="End"
                            Style="{StaticResource MatchInfoMainPlayer}"
                            Text="{Binding HomePlayerName}" />
                    </StackLayout>
                    <StackLayout VerticalOptions="Center">
                        <Image
                            HorizontalOptions="EndAndExpand"
                            Source="{Binding HomeImageSource}"
                            Style="{StaticResource MatchInfoImage}" />
                    </StackLayout>
                </StackLayout>

                <StackLayout
                    Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource MatchInfoScoreContainer}">
                    <Button Style="{StaticResource MatchInfoScoreBox}" Text="{Binding Score}" />
                </StackLayout>
                <StackLayout
                    Grid.Row="0"
                    Grid.Column="3"
                    Style="{StaticResource MatchInfoTeam}">
                    <Image Source="{Binding AwayImageSource}" Style="{StaticResource MatchInfoImage}" />
                    <StackLayout Style="{StaticResource MatchInfoPlayerGroup}">
                        <Label Style="{StaticResource MatchInfoMainPlayer}" Text="{Binding AwayPlayerName}" />
                    </StackLayout>
                </StackLayout>
            </Grid>




