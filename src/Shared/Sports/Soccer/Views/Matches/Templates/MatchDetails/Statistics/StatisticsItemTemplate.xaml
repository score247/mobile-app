<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:d="http://xamarin.com/schemas/2014/forms/design"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:viewResources="clr-namespace:LiveScore.Soccer.ViewResources;assembly=LiveScore.Soccer"
              mc:Ignorable="d"
              xmlns:viewModels="clr-namespace:LiveScore.Soccer.ViewModels.Matches.MatchDetails.Statistics"
              x:DataType="viewModels:StatisticsItemViewModel"
              x:Class="LiveScore.Soccer.Views.Matches.Templates.MatchDetails.Statistics.StatisticsItemTemplate">
    <ViewCell>
        <Grid IsVisible="{Binding IsVisibled}">
            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <viewResources:MatchDetailViewResource />
                        <viewResources:MatchDetailStatisticViewResource />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="28" />
                <RowDefinition Height="24" />
                <RowDefinition Height="1" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>
            <Label Text="{Binding StatisticName}"
                   Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="4"
                   Style="{StaticResource MatchDetailStatisticTitleLabel}" />
            <Label Text="{Binding HomeValue}"
                   Grid.Column="0"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Style="{StaticResource MatchDetailStatisticHomeLabel}" />
            <ProgressBar Progress="{Binding HomePercent}"
                         Grid.Column="1"
                         Grid.Row="1"
                         Style="{StaticResource MatchDetailStatisticHomeProgressBar}" />
            <ProgressBar Progress="{Binding AwayPercent}"
                         Grid.Column="2"
                         Grid.Row="1"
                         Style="{StaticResource MatchDetailStatisticAwayProgressBar}" />
            <Label Text="{Binding AwayValue}"
                   Grid.Column="3"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Style="{StaticResource MatchDetailStatisticAwayLabel}" />
            <BoxView Grid.Row="2"
                     Grid.ColumnSpan="4"
                     Style="{StaticResource HorizontalLine}" />
        </Grid>
    </ViewCell>
</DataTemplate>