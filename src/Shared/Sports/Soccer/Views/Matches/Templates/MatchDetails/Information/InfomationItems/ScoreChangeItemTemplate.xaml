<?xml version="1.0" encoding="UTF-8" ?>
<DataTemplate x:Class="LiveScore.Soccer.Views.Templates.MatchDetails.Information.InfomationItems.ScoreChangeItemTemplate"
              xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:ffImageLoading="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
              xmlns:resources="clr-namespace:LiveScore.Soccer.ViewResources">
    <StackLayout>
        <StackLayout.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <resources:MatchDetailViewResource />
                    <resources:MatchDetailInfoViewResource />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </StackLayout.Resources>

        <Grid BackgroundColor="{Binding RowColor}"
              Style="{StaticResource MatchDetailInfoRow}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Grid.Column="0"
                   AutomationId="{Binding ItemAutomationId, StringFormat='MatchTime-{0}'}"
                   Style="{StaticResource MatchInfoMinutes}"
                   Text="{Binding MatchTime}" />

            <Grid Grid.Row="0"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  VerticalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Grid.Column="0"
                       AutomationId="{Binding ItemAutomationId, StringFormat='HomePlayerName-{0}'}"
                       HorizontalTextAlignment="End"
                       LineBreakMode="TailTruncation"
                       Style="{StaticResource MatchInfoMainPlayer}"
                       Text="{Binding HomePlayerName}" />
                <ffImageLoading:SvgCachedImage Grid.Row="0"
                                               Grid.Column="1"
                                               AutomationId="{Binding ItemAutomationId, StringFormat='HomeImage-{0}'}"
                                               DownsampleToViewSize="True"
                                               IsVisible="{Binding VisibleHomeImage}"
                                               Source="{Binding ImageSource}"
                                               Style="{StaticResource MatchInfoImage}" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       AutomationId="{Binding ItemAutomationId, StringFormat='HomeAssistPlayerName-{0}'}"
                       HorizontalTextAlignment="End"
                       IsVisible="{Binding IsVisibleHomeAssist}"
                       Style="{StaticResource MatchInfoAssistedPlayer}"
                       LineBreakMode="TailTruncation"
                       Text="{Binding HomeAssistName}" />
                <ffImageLoading:SvgCachedImage Grid.Row="1"
                                               Grid.Column="1"
                                               DownsampleToViewSize="True"
                                               IsVisible="{Binding IsVisibleHomeAssist}"
                                               Source="{Binding GoalAssistImageSource}"
                                               HeightRequest="12"
                                               Style="{StaticResource MatchInfoImageAssistedPlayer}" />
            </Grid>
            <Label Grid.Row="0"
                   Grid.Column="3"
                   AutomationId="{Binding ItemAutomationId, StringFormat='Score-{0}'}"
                   Style="{StaticResource MatchInfoScore}"
                   Text="{Binding Score}" />
            <Grid Grid.Row="0"
                  Grid.Column="4"
                  Grid.ColumnSpan="2"
                  VerticalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ffImageLoading:SvgCachedImage Grid.Row="0"
                                               Grid.Column="0"
                                               AutomationId="{Binding ItemAutomationId, StringFormat='AwayImage-{0}'}"
                                               DownsampleToViewSize="True"
                                               IsVisible="{Binding VisibleAwayImage}"
                                               Source="{Binding ImageSource}"
                                               Style="{StaticResource MatchInfoImage}" />
                <Label Grid.Row="0"
                       Grid.Column="1"
                       AutomationId="{Binding ItemAutomationId, StringFormat='AwayPlayerName-{0}'}"
                       Style="{StaticResource MatchInfoMainPlayer}"
                       LineBreakMode="TailTruncation"
                       Text="{Binding AwayPlayerName}" />

                <ffImageLoading:SvgCachedImage Grid.Row="1"
                                               Grid.Column="0"
                                               DownsampleToViewSize="True"
                                               IsVisible="{Binding IsVisibleAwayAssist}"
                                               Source="{Binding GoalAssistImageSource}"
                                               HeightRequest="12"
                                               Style="{StaticResource MatchInfoImageAssistedPlayer}" />
                <Label Grid.Row="1"
                       Grid.Column="1"
                       AutomationId="{Binding ItemAutomationId, StringFormat='AwayAssistPlayerName-{0}'}"
                       IsVisible="{Binding IsVisibleAwayAssist}"
                       LineBreakMode="TailTruncation"
                       Style="{StaticResource MatchInfoAssistedPlayer}"
                       Text="{Binding AwayAssistName}" />
            </Grid>
        </Grid>
        <BoxView Style="{StaticResource HorizontalLine}" />
    </StackLayout>
</DataTemplate>