<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="LiveScore.Soccer.ViewResources.MatchDetailTableViewResource"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:ffImageLoading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">
    <Style x:Key="MatchDetailTableText"
           BasedOn="{StaticResource TableText}"
           TargetType="Label">
        <Setter Property="Padding"
                Value="2,0" />
        <Setter Property="TextColor"
                Value="#A2A2A3" />
    </Style>
    <Style x:Key="MatchDetailTableHighLightRowText"
           BasedOn="{StaticResource TableText}"
           TargetType="Label">
        <Setter Property="Padding"
                Value="2,0" />
    </Style>

    <Style x:Key="MatchDetailTableHighLightRowAlignCenterText"
           BasedOn="{StaticResource MatchDetailTableHighLightRowText}"
           TargetType="Label">
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="MatchDetailTableAlignCenterText"
           BasedOn="{StaticResource MatchDetailTableText}"
           TargetType="Label">
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="MatchDetailTableFooter"
           TargetType="StackLayout">
        <Setter Property="Padding"
                Value="12,8" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeLabel"
           TargetType="Label">
        <Setter Property="Margin"
                Value="8,0,0,0" />
        <Setter Property="FontSize"
                Value="10" />
        <Setter Property="FontFamily"
                Value="{StaticResource RobotoLight}" />
        <Setter Property="TextColor"
                Value="#fff" />
    </Style>

    <Style x:Key="MatchDetailTableNotes"
           BasedOn="{StaticResource MatchDetailTableOutComeLabel}"
           TargetType="Label">
        <Setter Property="Margin"
                Value="0,0,0,8" />
    </Style>
    <Style x:Key="MatchDetailTableHighLightColumn" TargetType="Frame">        
        <Setter Property="BackgroundColor"
                Value="#1F2022" />
        <Setter Property="CornerRadius"
                Value="0" />
        <Setter Property="Margin"
                Value="0" />
    </Style>

    <Style x:Key="MatchDetailTableHighLightColumnLabel" TargetType="Label">
        <Setter Property="TextColor"
                Value="#A2A2A3" />
        <Setter Property="FontSize"
                Value="{StaticResource TableRowFontSize}" />
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="VerticalTextAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="MatchDetailTableHighLightColumnRowLabel" BasedOn="{StaticResource MatchDetailTableHighLightColumnLabel}" TargetType="Label">
        <Setter Property="TextColor"
                Value="#fff" />
    </Style>
    
    <Style x:Key="MatchDetailTableOutComeTeamOnLeague"
           TargetType="Frame">
        <Setter Property="HeightRequest"
                Value="16" />
        <Setter Property="WidthRequest"
                Value="16" />
        <Setter Property="BackgroundColor"
                Value="{StaticResource TableBgColor}" />
        <Setter Property="CornerRadius"
                Value="0" />
        <Setter Property="Margin"
                Value="0" />
    </Style>
    <Style x:Key="MatchDetailTableOutComeFirstPositive"
           BasedOn="{StaticResource MatchDetailTableOutComeTeamOnLeague}"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource FirstPositiveOutcomeColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeSecondPositive"
           BasedOn="{StaticResource MatchDetailTableOutComeTeamOnLeague}"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource SecondPositiveOutcomeColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeThirdPositive"
           BasedOn="{StaticResource MatchDetailTableOutComeTeamOnLeague}"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource ThirdPositiveOutcomeColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeFourthPositive"
           BasedOn="{StaticResource MatchDetailTableOutComeTeamOnLeague}"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource FourthPositiveOutcomeColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeFirstNegative"
           BasedOn="{StaticResource MatchDetailTableOutComeTeamOnLeague}"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource FirstNegativeOutcomeColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeSecondNegative"
           BasedOn="{StaticResource MatchDetailTableOutComeTeamOnLeague}"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource SecondNegativeOutcomeColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOrderTeamOnLeagueLayout"
           TargetType="StackLayout">
        <Setter Property="BackgroundColor"
                Value="{StaticResource TableBgColor}" />
    </Style>

    <Style x:Key="MatchDetailTableOrderTeamOnLeagueLabel"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="#fff" />
        <Setter Property="FontSize"
                Value="10" />
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="VerticalTextAlignment"
                Value="Center" />
    </Style>

    <Style x:Key="MatchDetailTableOutComeLayout"
           TargetType="FlexLayout">
        <Setter Property="Margin"
                Value="0,0,0,8" />
        <Setter Property="HeightRequest"
                Value="16" />
        <Setter Property="AlignItems"
                Value="Center" />
    </Style>
</ResourceDictionary>