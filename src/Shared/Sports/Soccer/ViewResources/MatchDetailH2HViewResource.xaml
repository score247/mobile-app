<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="LiveScore.Soccer.ViewResources.MatchDetailH2HViewResource"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="MatchDetailH2HResultButton" TargetType="Button">
        <Setter Property="HeightRequest" Value="20" />
        <Setter Property="WidthRequest" Value="20" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="TextColor" Value="#fff" />
        <Setter Property="FontFamily" Value="{StaticResource RobotoBold}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="MatchDetailH2HResultDrawIcon" BasedOn="{StaticResource MatchDetailH2HResultButton}" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#FF7246" />
    </Style>
    <Style x:Key="MatchDetailH2HResultWinIcon" BasedOn="{StaticResource MatchDetailH2HResultButton}" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#00B300" />
    </Style>
    <Style x:Key="MatchDetailH2HResultLoseIcon" BasedOn="{StaticResource MatchDetailH2HResultButton}" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#FF0000" />
    </Style>
</ResourceDictionary>