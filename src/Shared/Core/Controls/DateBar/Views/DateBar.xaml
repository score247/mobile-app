<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="LiveScore.Core.Controls.DateBar.Views.DateBar"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:LiveScore.Core.Controls.DateBar.Views">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resources:DateBarResource />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <StackLayout>
            <FlexLayout x:Name="DateBarLayout"
                    Style="{StaticResource DateBarLayout}">
            </FlexLayout>
            <FlexLayout Style="{StaticResource DateBarLayout}">
                <Label Style="{StaticResource LiveIcon}" />
                <StackLayout>
                    <Label Style="{StaticResource DateBarDayNumberLabel}" Text="9" />
                    <Label Style="{StaticResource DateBarDayNameLabel}" Text="MON" />
                </StackLayout>
                <StackLayout>
                    <Label Style="{StaticResource DateBarDayNumberLabel}" Text="9" />
                    <Label Style="{StaticResource DateBarDayNameLabel}" Text="MON" />
                </StackLayout>
                <StackLayout>
                    <Label Style="{StaticResource DateBarDayNumberLabel}" Text="9" />
                    <Label Style="{StaticResource DateBarDayNameLabel}" Text="MON" />
                </StackLayout>
                <StackLayout>
                    <Label Style="{StaticResource DateBarDayNumberLabel}" Text="9" />
                    <Label Style="{StaticResource DateBarDayNameLabel}" Text="MON" />
                </StackLayout>
                <StackLayout>
                    <Label Style="{StaticResource DateBarDayNumberLabel}" Text="9" />
                    <Label Style="{StaticResource DateBarDayNameLabel}" Text="MON" />
                </StackLayout>
                <Label Style="{StaticResource CalendarIcon}" />
            </FlexLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>