<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="LiveScore.Core.Controls.DateBar.Views.DateBarResource"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="DateBarSelectedTextColor">#FF8A00</Color>
    <Color x:Key="DateBarTextColor">#AAA8A5</Color>
    <Color x:Key="DateBarLiveColor">#30C2FF</Color>
    <Style x:Key="CalendarIcon"
           BasedOn="{StaticResource Icons}"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="20" />
        <Setter Property="VerticalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource DateBarTextColor}" />
        <Setter Property="Text"
                Value="&#xe919;" />
    </Style>

    <Style x:Key="LiveIcon"
           BasedOn="{StaticResource Icons}"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="32" />
        <Setter Property="VerticalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource DateBarLiveColor}" />
        <Setter Property="Text"
                Value="&#xe91a;" />
    </Style>

    <Style x:Key="DateBarLayout"
           TargetType="FlexLayout">
        <Setter Property="BackgroundColor"
                Value="{StaticResource PrimaryColor}" />
        <Setter Property="Direction"
                Value="Row" />
        <Setter Property="AlignItems"
                Value="Center" />
        <Setter Property="JustifyContent"
                Value="SpaceAround" />
        <Setter Property="Padding"
                Value="2,15,2,15" />
    </Style>

    <Style x:Key="DateBarLabel"
           TargetType="Label">
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource DateBarTextColor}" />
        <Setter Property="FontFamily"
                Value="{StaticResource RobotoMedium}" />
    </Style>

    <Style x:Key="DateBarDayNameLabel"
           BasedOn="{StaticResource DateBarLabel}"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="11" />
    </Style>

    <Style x:Key="DateBarDayNumberLabel"
           BasedOn="{StaticResource DateBarLabel}"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="9" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>

    <Style x:Key="DateBarActiveDayNameLabel"
           BasedOn="{StaticResource DateBarDayNameLabel}"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="{StaticResource RobotoMedium}" />
    </Style>

    <Style x:Key="DateBarActiveDayNumberLabel"
           BasedOn="{StaticResource DateBarDayNumberLabel}"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="{StaticResource RobotoMedium}" />
    </Style>
</ResourceDictionary>