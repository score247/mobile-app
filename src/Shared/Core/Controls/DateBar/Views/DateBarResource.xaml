<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="LiveScore.Core.Controls.DateBar.Views.DateBarResource"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="DateBarSelectedColor">#F24822</Color>
    <Style x:Key="CalendarIcon"
           BasedOn="{StaticResource Icons}"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="20" />
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="VerticalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource FourthTextColor}" />
        <Setter Property="Text"
                Value="&#xe91f;" />
    </Style>

    <Style x:Key="HomeIcon"
           BasedOn="{StaticResource Icons}"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="18" />
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="VerticalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource PrimaryAccentColor}" />
        <Setter Property="Text"
                Value="&#xe91e;" />
    </Style>

    <Style x:Key="DateBarLayout"
           TargetType="FlexLayout">
        <Setter Property="BackgroundColor"
                Value="{StaticResource PrimaryColor}" />
        <Setter Property="Direction"
                Value="Row" />
        <Setter Property="AlignItems"
                Value="Stretch" />
        <Setter Property="JustifyContent"
                Value="SpaceAround" />
        <Setter Property="HeightRequest">
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android">50</On>
                <On Platform="iOS">32</On>
            </OnPlatform>
        </Setter>
        <Setter Property="Padding"
                Value="10,15,10,12" />
    </Style>

    <Style x:Key="DateBarBox"
           TargetType="StackLayout">
        <Setter Property="WidthRequest"
                Value="32" />
        <Setter Property="HeightRequest">
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android">50</On>
                <On Platform="iOS">32</On>
            </OnPlatform>
        </Setter>
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="HorizontalOptions"
                Value="Center" />
        <Setter Property="VerticalOptions"
                Value="Center" />
        <Setter Property="BackgroundColor"
                Value="Transparent" />
    </Style>

    <Style x:Key="DateBarDayNumberLabel"
           TargetType="Label">
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource FourthTextColor}" />
        <Setter Property="FontSize"
                Value="18" />
    </Style>

    <Style x:Key="DateBarDayNameLabel"
           TargetType="Label">
        <Setter Property="HorizontalTextAlignment"
                Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource FourthTextColor}" />
        <Setter Property="FontAttributes"
                Value="Bold" />
        <Setter Property="FontSize"
                Value="10" />
    </Style>
</ResourceDictionary>