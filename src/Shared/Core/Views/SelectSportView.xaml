<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LiveScore.Core.Views.SelectSportView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    Title="Select Sport"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{StaticResource PrimaryColor}">
    <ContentPage.ToolbarItems x:Uid="toolbarItem">
        <ToolbarItem
            Name="Done"
            Command="{Binding DoneCommand}"
            Order="Primary"
            Priority="1"
            Text="Done" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <ListView
            AutomationProperties.IsInAccessibleTree="False"
            BackgroundColor="{StaticResource PrimaryColor}"
            ItemsSource="{Binding SportItems}"
            SelectedItem="{Binding SelectedSportItem}"
            SeparatorColor="{StaticResource LineColor}"
            VerticalOptions="FillAndExpand">
            <ListView.Behaviors>
                <b:EventToCommandBehavior Command="{Binding SelectSportItemCommand}" EventName="ItemTapped" />
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout Style="{StaticResource SettingMenuRow}">
                            <Label
                                Style="{StaticResource NavName}"
                                Text="{Binding Type.DisplayName}" />
                            <Label IsVisible="{Binding IsVisible}" Style="{StaticResource CheckIcon}" />
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <StackLayout Orientation="Horizontal" />
            </ListView.Footer>
        </ListView>
    </StackLayout>
</ContentPage>