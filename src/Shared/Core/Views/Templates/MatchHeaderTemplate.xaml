<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate x:Class="LiveScore.Core.Views.Templates.MatchHeaderTemplate" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:commonConverters="clr-namespace:LiveScore.Common.Converters;assembly=LiveScore.Common" xmlns:coreConverters="clr-namespace:LiveScore.Core.Converters" xmlns:resources="clr-namespace:LiveScore.Core.ViewResources">
    <ViewCell Height="28">
        <StackLayout>
            <StackLayout.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <resources:MatchViewResource />
                    </ResourceDictionary.MergedDictionaries>
                    <commonConverters:UpperCaseConverter x:Key="upperCaseConverter" />
                    <coreConverters:MatchHeaderEventDayConverter x:Key="matchHeaderEventDayConverter" />
                </ResourceDictionary>
            </StackLayout.Resources>
            <Grid Style="{StaticResource LeagueBox}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="{StaticResource FunctionGroupHeight}" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0" 
                             Style="{StaticResource LeagueFlagContainer}">
                    <Image Source="images/flag_league/flag_england.png" Style="{StaticResource LeagueFlag}" />
                </StackLayout>
                <Label Grid.Row="0" Grid.Column="1"
                       LineBreakMode="TailTruncation" 
                       Style="{StaticResource LeagueName}" 
                       Text="{Binding Key.Name, Converter={StaticResource upperCaseConverter}}" />
                <Label Grid.Row="0" Grid.Column="2"
                       AutomationId="MatchDateLbl" 
                       Style="{StaticResource MatchDate}" 
                       Text="{Binding Key, Converter={StaticResource matchHeaderEventDayConverter}}}" />
                <Label Grid.Row="0" Grid.Column="3" 
                       x:Name="DetailIcon" 
                       AutomationId="LeagueDetailBtn"
                       Style="{StaticResource DetailIcon}" />
            </Grid>
        </StackLayout>
    </ViewCell>
</DataTemplate>