<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="LiveScore.Core.Views.Templates.NavigationTitleTemplate"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:LiveScore.Common.Converters;assembly=LiveScore.Common">
    <ContentView.Resources>
        <converters:UpperCaseConverter x:Key="UpperCaseConverter" />
    </ContentView.Resources>
    <ContentView.Content>
        <FlexLayout AutomationProperties.IsInAccessibleTree="False"
                    Style="{StaticResource FlexLayoutAlignCenter}">
            <Label Style="{StaticResource Icons}"
                   Text="&#xe912;"
                   TextColor="#FF7246"
                   FontSize="12" />
            <Label x:Name="sportLabel"
                   AutomationId="{Binding CurrentSport, StringFormat='NavigationSportName-{0}'}"
                   Style="{StaticResource SportName}"
                   Text="{Binding CurrentSport, Converter={StaticResource UpperCaseConverter}}" />
            <Label Style="{StaticResource Icons}"
                   Text="&#xe913;"
                   TextColor="#FF7246"
                   FontSize="12" />
        </FlexLayout>
    </ContentView.Content>
</ContentView>