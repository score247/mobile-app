<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="LiveScore.Core.ViewResources.PopupViewResource"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="CommonPopupLayout"
           TargetType="StackLayout">
        <Setter Property="VerticalOptions"
                Value="EndAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Margin"
                Value="0,0,0,48" />
        <Setter Property="Padding" Value="0,16" />
        <Setter Property="BackgroundColor"
                Value="{StaticResource CommonPopupBgColor}" />
    </Style>

    <Style x:Key="CommonPopupContentLabel"
           TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="12,0,12,0" />
        <Setter Property="TextColor"
                Value="{StaticResource CommonPopupContentColor}" />
        <Setter Property="FontSize"
                Value="13" />
    </Style>

    <!-- Notification -->

    <Style x:Key="CommonTopPopupLayout"
           TargetType="Frame">
        <Setter Property="VerticalOptions"
                Value="StartAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Margin"
                Value="5,5,5,0" />
        <Setter Property="BackgroundColor"
                Value="{StaticResource NotificationBgColor}" />
        <Setter Property="Opacity" Value="0.92" />
    </Style>
    <Style x:Key="CommonTopPopupContentLayout"
           TargetType="StackLayout">
        <Setter Property="Padding" Value="20,10,20,12" />
    </Style>
    <Style x:Key="NotificationContentLabel"
           TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="TextColor"
                Value="{StaticResource NotificationContentColor}" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>
    <Style x:Key="NotificationTitleLabel" BasedOn="{StaticResource NotificationContentLabel}"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource RobotoBold}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    <Style x:Key="CommonTopPopupActionLayout"
           TargetType="StackLayout">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="CommonTopPopupLine"
           TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="#000" />
        <Setter Property="Opacity" Value="0.24" />
        <Setter Property="WidthRequest" Value="1" />
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
    </Style>
    <Style x:Key="NotificationButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource NotificationContentColor}" />
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>