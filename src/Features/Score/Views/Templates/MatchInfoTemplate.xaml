<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="LiveScore.Score.Views.Templates.MatchInfoTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:LiveScore.Score.ViewResources"
    x:Name="view">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resources:MatchDetailViewResource />
                <resources:MatchInfoViewResource />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    <ScrollView>
        <StackLayout>
            <FlexLayout Style="{StaticResource TabContent}">
                <FlexLayout Style="{StaticResource MatchStatusAlignRight}">
                    <StackLayout Style="{StaticResource InfoContentRight}">
                        <Label Style="{StaticResource InfoText}" Text="Carlos Embalo" />
                        <Label Style="{StaticResource MatchYellowCard}" />
                    </StackLayout>
                    <ContentView>
                        <BoxView Style="{StaticResource VerticalLine}" />
                    </ContentView>
                    <Label Style="{StaticResource MatchMinutes}" Text="12'" />
                </FlexLayout>
                <ContentView>
                    <BoxView Style="{StaticResource HorizontalLine}" />
                </ContentView>
                <FlexLayout Style="{StaticResource MatchStatusAlignJustify}">
                    <StackLayout Style="{StaticResource StacklayoutHorizontal}">
                        <Label Style="{StaticResource MatchMinutes}" Text="34'" />
                        <ContentView>
                            <BoxView Style="{StaticResource VerticalLine}" />
                        </ContentView>
                        <StackLayout Style="{StaticResource InfoContainer}">
                            <Image Style="{StaticResource MatchInfoBall}" />
                            <Label Style="{StaticResource InfoText}" Text="Lumbomir Tupta" />
                        </StackLayout>
                    </StackLayout>
                    <StackLayout>
                        <Button Style="{StaticResource MatchInfoScoreBox}" Text="1 - 0" />
                    </StackLayout>
                </FlexLayout>
                <ContentView>
                    <BoxView Style="{StaticResource HorizontalLine}" />
                </ContentView>
                <FlexLayout Style="{StaticResource MatchStatusAlignLeft}">
                    <Label Style="{StaticResource MatchMinutes}" Text="54'" />
                    <ContentView>
                        <BoxView Style="{StaticResource VerticalLine}" />
                    </ContentView>
                    <StackLayout Style="{StaticResource InfoContainer}">
                        <Label Style="{StaticResource MatchYellowCard}" />
                        <Label Style="{StaticResource InfoText}" Text="Jacob Rasussen" />
                    </StackLayout>
                </FlexLayout>
                <ContentView>
                    <BoxView Style="{StaticResource HorizontalLine}" />
                </ContentView>
                <FlexLayout Style="{StaticResource MatchStatusAlignJustify}">
                    <StackLayout Style="{StaticResource StacklayoutHorizontal}">
                        <Label Style="{StaticResource MatchMinutes}" Text="63'" />
                        <ContentView>
                            <BoxView Style="{StaticResource VerticalLine}" />
                        </ContentView>
                        <StackLayout Style="{StaticResource InfoContainer}">
                            <Image Style="{StaticResource MatchInfoBall}" />
                            <Label Style="{StaticResource InfoText}" Text="Lumbomir Tupta" />
                        </StackLayout>
                    </StackLayout>
                    <StackLayout>
                        <Button Style="{StaticResource MatchInfoScoreBox}" Text="2 - 0" />
                    </StackLayout>
                </FlexLayout>
                <ContentView>
                    <BoxView Style="{StaticResource HorizontalLine}" />
                </ContentView>
                <FlexLayout>
                    <StackLayout>
                        <Button Style="{StaticResource MatchInfoScoreBox}" Text="2 - 0" />
                    </StackLayout>
                    <StackLayout Style="{StaticResource StacklayoutHorizontalCenter}">
                        <StackLayout Style="{StaticResource InfoContainer}">
                            <StackLayout>
                                <Label Style="{StaticResource InfoText}" Text="Darko Lazovic" />
                                <Label
                                    Style="{StaticResource InfoText}"
                                    Text="Daniel Bessa"
                                    TextColor="{StaticResource SecondTextColor}" />
                            </StackLayout>
                            <Image Style="{StaticResource MatchInfoBall}" />
                        </StackLayout>
                        <ContentView>
                            <BoxView Style="{StaticResource VerticalLine}" />
                        </ContentView>
                        <Label Style="{StaticResource MatchMinutes}" Text="88'" />
                    </StackLayout>
                </FlexLayout>
                <ContentView>
                    <BoxView Style="{StaticResource HorizontalLine}" />
                </ContentView>
                <FlexLayout Style="{StaticResource MatchStatusAlignLeft}">
                    <Label Style="{StaticResource MatchMinutes}" Text="90'" />
                    <ContentView>
                        <BoxView Style="{StaticResource VerticalLine}" />
                    </ContentView>
                    <StackLayout Style="{StaticResource InfoContainer}">
                        <Label Style="{StaticResource MatchYellowCard}" />
                        <Label Style="{StaticResource InfoText}" Text="Jacob Rasussen" />
                    </StackLayout>
                </FlexLayout>
                <ContentView>
                    <BoxView Style="{StaticResource HorizontalLine}" />
                </ContentView>
                <FlexLayout Style="{StaticResource MatchStatusAlignLeft}">
                    <Label Style="{StaticResource MatchMinutes}" Text="91'" />
                    <ContentView>
                        <BoxView Style="{StaticResource VerticalLine}" />
                    </ContentView>
                    <StackLayout Style="{StaticResource InfoContainer}">
                        <Label Style="{StaticResource MatchYellowCard}" />
                        <Label Style="{StaticResource InfoText}" Text="Jacob Rasussen" />
                    </StackLayout>
                </FlexLayout>
            </FlexLayout>
            <!--  Match info  -->
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                    <RowDefinition Height="28" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource MatchInfoTitle}"
                    Text="Referee:" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource MatchInfoValue}"
                    Text="Federico La Penna (Italy)" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource MatchInfoTitle}"
                    Text="Venue:" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource MatchInfoValue}"
                    Text="Carlo Castellany" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource MatchInfoTitle}"
                    Text="Date and Time:" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource MatchInfoValue}"
                    Text="15:00 Jan 25, 2019" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource MatchInfoTitle}"
                    Text="Spectators:" />
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource MatchInfoValue}"
                    Text="6215" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource MatchInfoTitle}"
                    Text="League:" />
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource MatchInfoValue}"
                    Text="Serie A Italy" />
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentView>