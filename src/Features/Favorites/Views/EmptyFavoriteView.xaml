<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="LiveScore.Favorites.Views.EmptyFavoriteView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{StaticResource PrimaryColor}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Priority="1">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="IOS" Value="images/common/icon_transparent.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Label Text="Favourites is comming soon"
               TextColor="{StaticResource SecondTextColor}" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" FontSize="13" />
    </ContentPage.Content>
</ContentPage>