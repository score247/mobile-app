<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="LiveScore.Features.League.ViewResources.LeagueViewResource"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:ffImageLoading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:controls="clr-namespace:PanCardView.Controls;assembly=PanCardView">
    <Style x:Key="Searchbar" TargetType="Grid">
        <Setter Property="Padding" Value="16,8,16,8" />
        <Setter Property="BackgroundColor" Value="#272830" />
    </Style>
    <Style x:Key="SearchIcon" BasedOn="{StaticResource Icons}"
                   TargetType="Label">
        <Setter Property="Margin"
                        Value="10,0,0,0" />
        <Setter Property="VerticalTextAlignment"
                        Value="Center" />
        <Setter Property="TextColor"
                        Value="#616163" />
        <Setter Property="FontSize"
                        Value="18" />
        <Setter Property="Text"
                        Value="&#xe91d;" />
    </Style>
    <Style x:Key="SearchBoxBorder" TargetType="Frame">
        <Setter Property="HeightRequest"
                        Value="36" />
        <Setter Property="CornerRadius"
                        Value="14" />
        <Setter Property="BorderColor"
                        Value="#3A3942" />
        <Setter Property="BackgroundColor"
                        Value="#161719" />
    </Style>
    <Style x:Key="SearchBox" TargetType="Entry">
        <Setter Property="HeightRequest"
                        Value="36" />
        <Setter Property="BackgroundColor"
                        Value="Transparent" />
        <Setter Property="PlaceholderColor"
                        Value="#616163" />
        <Setter Property="FontSize"
                        Value="12" />
        <Setter Property="Margin"
                        Value="24,0,12,0" />
    </Style>
</ResourceDictionary>